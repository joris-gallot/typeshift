{
  "name": "typestep",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@9.0.6",
  "description": "Simplifies JavaScript to TypeScript migration with incremental changes",
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/joris-gallot/typestep.git"
  },
  "keywords": [
    "tsc"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "bin": "./dist/cli.mjs",
  "files": [
    "dist"
  ],
  "engines": {
    "node": "v20.11.1"
  },
  "scripts": {
    "playground": "vite-node src/playground.ts",
    "parse": "vite-node src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "build": "unbuild",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.16.1",
    "@types/node": "^20.12.8",
    "eslint": "^9.2.0",
    "unbuild": "^2.0.0",
    "vite-node": "^1.6.0",
    "vitest": "^1.6.0"
  }
}
